<script>
	function showdata(a, b, c, d, e,productId) {
		var link = d.toString();
		//console.log(a +"|"+ b +"|"+ c +"|"+ d +"|" + e + "|" + productId);
		var arrIMG = e.split(",");
		//console.log("TCL: showdata -> arrIMG", arrIMG)
		document.getElementById("indata1").innerHTML = a;
		document.getElementById("indata2").innerHTML = b;
		document.getElementById("indata3").innerHTML = c;
		document.getElementById("indata4").src = "/" + link;
		
        //console.log("TCL: showdata -> link", link)
		for (let i = 0; i < 11; i++) {
			var temp = "img" + i.toString();
			//console.log(temp);
			if (arrIMG.length <= i) {
				document.getElementById(temp).style.display = "none";
			} else {
				document.getElementById(temp).src = "/" + arrIMG[i].toString();
			}    
		}
		$("a.details").attr("href", "/products/" + productId);
	}
</script>


